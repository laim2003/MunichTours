<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CardView.Title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="CardView.InfoContainer">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@drawable/info_header</item>
    </style>
    <style name="PropertyBackground">
        <item name="android:radius">50dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="PropertyBackground.Hot">
        <item name="android:background">@drawable/phot</item>
    </style>
    <style name="PropertyBackground.Live">
        <item name="android:background">@drawable/plive</item>
    </style>
</resources>
